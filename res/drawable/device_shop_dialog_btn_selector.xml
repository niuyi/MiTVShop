        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <padding
                android:top="12dp"
                android:bottom="12dp"
                android:left="24dp"
                android:right="24dp" />
            <stroke
                android:width="0.3dp"
                android:color="#b2b2b2"
                android:dashWidth="2dp"
                android:dashGap="2dp" />
            <solid
