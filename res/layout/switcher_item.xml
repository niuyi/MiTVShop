<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.mitv.shop.widget.SwitcherItem xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:paddingLeft="10px"
              android:paddingRight="10px"
              android:focusable="true"
              android:clickable="true"
              android:layout_width="match_parent"
              android:background="@drawable/height_selector"
              android:layout_height="100px">

    <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10px"
            android:textSize="38px"
            android:layout_weight="1"
            android:gravity="left"
            android:text="送货时间"/>


    <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/triangle_left_normal"/>

    <LinearLayout
            android:layout_width="400px"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_deliver_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:includeFontPadding="false"
                android:textSize="36px"/>

        <TextView
                android:id="@+id/tv_deliver_value_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:includeFontPadding="false"
                android:textSize="26px"
                android:alpha="0.6"/>


    </LinearLayout>

    <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/triangle_right_normal"/>

</com.xiaomi.mitv.shop.widget.SwitcherItem>