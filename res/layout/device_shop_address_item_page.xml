<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:padding="10px">

    <LinearLayout
        android:id="@+id/address_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:background="@drawable/device_shop_address_selector"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/addr_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="牛毅"
                android:textSize="36px"
                android:textColor="#333333"
                android:layout_marginTop="24dp"
                 />

            <TextView
                android:id="@+id/addr_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13810099138"
                android:textSize="36px"
                android:textColor="#333333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/addr_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中国北京西土城路10号 1-203 （100037）"
                android:textSize="36px"
                android:textColor="#666666"
                android:layout_marginTop="54dp"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="2dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical" />
        </LinearLayout>
</FrameLayout>
