<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <include layout="@layout/title_view"/>

      <LinearLayout
              android:layout_gravity="center"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

          <Button
              android:id="@+id/btn_electron"
              android:layout_width="374px"
              android:layout_height="180px"
              android:textSize="36px"
              android:text="@string/invoice_electron"/>

          <Button
              android:id="@+id/btn_personal"
              android:layout_width="374px"
              android:layout_height="180px"
              android:textSize="36px"
              android:layout_marginLeft="90px"
              android:text="@string/invoice_personal"/>

          <Button
              android:id="@+id/btn_company"
              android:layout_width="374px"
              android:layout_height="180px"
              android:textSize="36px"
              android:layout_marginLeft="90px"
              android:text="@string/invoice_company"/>

      </LinearLayout>

       <TextView
               android:id="@+id/tv_desc"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal|bottom"
               android:layout_marginBottom="90px"
               android:textSize="30px"
               android:alpha="0.5"
               android:text="@string/invoice_electron_desc"
               android:includeFontPadding="false"/>

</merge>